<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.fueltracker.AddCarActivity">

    <TextView
        android:text="Brand:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/brandTxt"
        android:layout_alignBottom="@+id/brandSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Mark:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brandTxt"
        android:layout_alignLeft="@+id/brandTxt"
        android:layout_alignStart="@+id/brandTxt"
        android:layout_marginTop="36dp"
        android:id="@+id/markTxt" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fuelTxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="150dp"
        android:id="@+id/fuelSpinner" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/brandSpinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/fuelTxt"
        android:layout_alignLeft="@+id/markSpinner"
        android:layout_alignStart="@+id/markSpinner" />

    <TextView
        android:text="Type of fuel: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:id="@+id/fuelTxt"
        android:layout_below="@+id/markSpinner"
        android:layout_alignLeft="@+id/markTxt"
        android:layout_alignStart="@+id/markTxt" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/markSpinner"
        android:popupBackground="@android:drawable/alert_light_frame"
        android:layout_alignTop="@+id/markTxt"
        android:layout_alignLeft="@+id/fuelSpinner"
        android:layout_alignStart="@+id/fuelSpinner" />

    <Button
        android:text="save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fuelSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp"
        android:id="@+id/saveCarBtn"
        android:onClick=""/>

    <TextView
        android:id="@+id/regNumberTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fuelSpinner"
        android:layout_alignLeft="@+id/fuelTxt"
        android:layout_alignStart="@+id/fuelTxt"
        android:layout_marginBottom="22dp"
        android:text="Reg. Number:" />

    <EditText
        android:id="@+id/regNumberField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/regNumberTxt"
        android:layout_alignLeft="@+id/fuelSpinner"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/fuelSpinner"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="10sp" />
</RelativeLayout>

